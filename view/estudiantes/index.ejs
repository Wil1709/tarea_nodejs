<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estudiantes</title>
    <!-- Incluye Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Barra de Navegación -->
  <header>
    <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #000">
        <a class="navbar-brand" href="#">Tarea NodeJS</a>
        <button
            class="navbar-toggler d-lg-none"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapsibleNavId"
            aria-controls="collapsibleNavId"
            aria-expanded="false"
            aria-label="Toggle navigation"
        ></button>
        
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href=".">Estudiantes</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container mt-5">
  <h1 class="text-center">Estudiantes</h1>
<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#formModal">
  Crear Nuevo
</button>

<!-- Tabla para mostrar los registros existentes -->
<h2 class="text-center">Lista de Estudiantes</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Carnet</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th>Fecha de Nacimiento</th>
            <th>Tipo de Sangre</th>
        </tr>
    </thead>
    <tbody>
        <% resultado.forEach(estudiante => { %>
            <tr data-id="<%= estudiante.id_estudiante %>"
                data-carne="<%= estudiante.carne %>"
                data-nombres="<%= estudiante.nombres %>"
                data-apellidos="<%= estudiante.apellidos %>"
                data-direccion="<%= estudiante.direccion %>"
                data-telefono="<%= estudiante.telefono %>"
                data-correo="<%= estudiante.correo_electronico %>"
                data-fecha="<%= estudiante.fecha_nacimiento %>"
                data-sangre="<%= estudiante.sangre %>">
                <td><%= estudiante.id_estudiante %></td>
                <td><%= estudiante.carne %></td>
                <td><%= estudiante.nombres %></td>
                <td><%= estudiante.apellidos %></td>
                <td><%= estudiante.direccion %></td>
                <td><%= estudiante.telefono %></td>
                <td><%= estudiante.correo_electronico %></td>
                <td><%= estudiante.fecha_nacimiento %></td>
                <td><%= estudiante.sangre %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalLabel">Datos de Estudiantes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="studentForm" action="/crud_e" method="post">
            <div class="mb-3">
                <label for="txt_id" class="form-label">id</label><br>
                <input type="text" id="txt_id" name="txt_id" placeholder="0">
              </div>
          <div class="mb-3">
            <label for="txt_carne" class="form-label">Carné</label><br>
            <input type="text" id="txt_carne" name="txt_carne" placeholder="carne" pattern="^E[0-9]{3}$" title="El formato del carnet debe ser E001 a E999" required>
            <div class="invalid-feedback">Por favor ingresa un carné válido (E001 a E999).</div>
          </div>
          <div class="mb-3">
            <label for="txt_nombres" class="form-label">Nombres</label>
            <input type="text" class="form-control" id="txt_nombres" name="txt_nombres" placeholder="Nombres">
          </div>
          <div class="mb-3">
            <label for="txt_apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control" id="txt_apellidos" name="txt_apellidos" placeholder="Apellidos">
          </div>
          <div class="mb-3">
            <label for="txt_direccion" class="form-label">Dirección</label>
            <input type="text" class="form-control" id="txt_direccion" name="txt_direccion" placeholder="Dirección">
          </div>
          <div class="mb-3">
            <label for="txt_telefono" class="form-label">Teléfono</label>
            <input type="text" class="form-control" id="txt_telefono" name="txt_telefono" placeholder="Teléfono">
          </div>
          <div class="mb-3">
            <label for="txt_correo" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="txt_correo" name="txt_correo" placeholder="Correo Electrónico">
          </div>
          <div class="mb-3">
            <label for="txt_fn" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="txt_fn" name="txt_fn">
          </div>
          <div class="mb-3">
            <label for="txt_sangre" class="form-label">Tipo de Sangre</label>
            <select class="form-select" id="txt_id_tipo_sangre" name="txt_sangre">
                <% tiposSangre.forEach(tipo => { %>
                  <option value="<%= tipo.id_tipo_sangre %>"><%= tipo.sangre %></option>
                <% }) %>
              </select>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="btn_crear" name="btn_crear" value="crear">Crear</button>
            <button type="submit" class="btn btn-warning" id="btn_actualizar" name="btn_actualizar" value="actualizar">Actualizar</button>
            <button type="submit" class="btn btn-danger" id="btn_borrar" name="btn_borrar" value="borrar">Borrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS y los scripts necesarios -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>

document.addEventListener('DOMContentLoaded', function() {
    const modal = new bootstrap.Modal(document.getElementById('formModal'));
    const table = document.querySelector('table');
    const form = document.getElementById('studentForm');
    const btnEliminar = document.getElementById('btn_borrar');
    const btnCrear = document.getElementById('btn_crear');
    const btnActualizar = document.getElementById('btn_actualizar');

    // Manejador para abrir el modal y rellenar los datos
    table.addEventListener('click', function(event) {
        const target = event.target;
        if (target.tagName === 'TD') {
            const row = target.closest('tr');
            document.getElementById('txt_id').value = row.getAttribute('data-id');
            document.getElementById('txt_carne').value = row.getAttribute('data-carne');
            document.getElementById('txt_nombres').value = row.getAttribute('data-nombres');
            document.getElementById('txt_apellidos').value = row.getAttribute('data-apellidos');
            document.getElementById('txt_direccion').value = row.getAttribute('data-direccion');
            document.getElementById('txt_telefono').value = row.getAttribute('data-telefono');
            document.getElementById('txt_correo').value = row.getAttribute('data-correo');
            document.getElementById('txt_fn').value = row.getAttribute('data-fecha');
            document.getElementById('txt_id_tipo_sangre').value = row.getAttribute('data-sangre');

            modal.show();
        }
    });

    form.addEventListener('submit', function(event) {
    const carnetInput = document.getElementById('txt_carne');
    const carnetPattern = /^E[0-9]{3}$/;

    // Verifica si el botón presionado es "Crear" o "Actualizar"
    const clickedButton = document.activeElement.id;
    if ((clickedButton === 'btn_crear' || clickedButton === 'btn_actualizar') && !carnetPattern.test(carnetInput.value)) {
        alert('El rango del carnet debe ser desde E001 hasta E999.');
        event.preventDefault();
    } else if (clickedButton === 'btn_borrar') {
        // Si el botón presionado es "Borrar", previene la validación y llama a la función de confirmación
        event.preventDefault(); // Previene el envío del formulario de inmediato
        confirmarEliminacion(event); // Llama a la función de confirmación
    }
});

// Función para confirmar eliminación
function confirmarEliminacion(event) {
    const id = document.getElementById('txt_id').value;

    if (confirm('¿Seguro de que quieres eliminar este estudiante?')) {
        // Si el usuario confirma, procede con la eliminación
        fetch('/crud_e', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ btn_borrar: true, txt_id: id })
        })
        .then(response => response.text())
        .then(data => {
            alert('Estudiante Eliminado Correctamente.');
            location.reload();
        })
        .catch(error => console.error('Error:', error));
    } else {
        // Si el usuario cancela, no hace nada
        alert('Eliminación de Estudiante Cancelada por el Usuario.');
    }
  }
});
</script>
</body>
</html>